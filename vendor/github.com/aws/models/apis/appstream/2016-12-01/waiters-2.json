{
  "version": 2,
  "waiters": {
    "FleetStarted": {
      "delay": 30,
      "maxAttempts": 40,
      "operation": "DescribeFleets",
      "acceptors": [
        {
          "state": "success",
          "matcher": "pathAll",
          "argument": "fleets[].state",
          "expected": "ACTIVE"
        },
        {
          "state": "failure",
          "matcher": "pathAny",
          "argument": "fleets[].state",
          "expected": "PENDING_DEACTIVATE"
        },
        {
          "state": "failure",
          "matcher": "pathAny",
          "argument": "fleets[].state",
          "expected": "INACTIVE"
        }
      ]
    },
    "FleetStopped": {
      "delay": 30,
      "maxAttempts": 40,
      "operation": "DescribeFleets",
      "acceptors": [
        {
          "state": "success",
          "matcher": "pathAll",
          "argument": "fleets[].state",
          "expected": "INACTIVE"
        },
        {
          "state": "failure",
          "matcher": "pathAny",
          "argument": "fleets[].state",
          "expected": "PENDING_ACTIVATE"
        },
        {
          "state": "failure",
          "matcher": "pathAny",
          "argument": "fleets[].state",
          "expected": "ACTIVE"
        }
      ]
    }
  }
}